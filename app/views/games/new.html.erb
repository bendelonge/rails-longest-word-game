<h1>New Game</h1>

<div class="letters">
  <ul>
    <div class="letters">
      <%@letters.each do |letter| %>
      <div class="letter">
        <li><%= letter %></li>
      </div>
        <% end %>
    </div>
  </ul>
</div>

<div class="question">
  <p>What is the longest word you can find ?</p>
  <div class="input-form">
    <form action="/score" method="post" class="form-inline">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :grid, @grid %>
      <div class="form-group">
        <input class="form-control"type="text" name="word">
        <input type="submit" class= "btn btn-primary" value="Play!">
      </div>
    </form>
  </div>


</div>
